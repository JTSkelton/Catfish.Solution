@{
  Layout = "_Layout";
}

@model CatFish.Models.ApplicationUser


<h2>Customize Profile</h2>
@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype="multipart/form-data"}))
{
  @Html.HiddenFor(model => model.Id)
  <div class="mb-3">
    @Html.LabelFor(model => model.FirstName, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.LastName, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Bio, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Bio, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.About, new { @class = "form-label"})
    @Html.TextAreaFor(model => model.About, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Age, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Age, new { @class = "form-control", required="required", type="Number"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Species, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Species, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.LabelFor(model => model.Breed, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Breed, new { @class = "form-control", required="required"})
  </div>
  <div class="mb-3">
    @Html.Label("Upload Profile Image", null, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.ImageFile, new { @class = "form-control", type="file", accept="image/*"})
  </div>
  <input type="submit" value="Save Profile" class="btn btn-primary w-100" />
}